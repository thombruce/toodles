{
  "name": "app",
  "version": "0.6.5",
  "author": "Thom Bruce (https://thombruce.com)",
  "description": "A todo app based on the todo.txt format",
  "repository": "thombruce/toodles",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "electron:build": "env ELECTRON=true nuxt build --prerender && electron-builder --publish onTag",
    "electron:dev": "env ELECTRON=true nuxt dev"
  },
  "build": {
    "appId": "com.thombruce.toodles",
    "productName": "Toodles",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "dayjs": "^1.11.12",
    "markdown-it": "^14.1.0",
    "rrule": "^2.8.1"
  },
  "devDependencies": {
    "@thombruce/tnt": "^0.34.4",
    "@thombruce/tnt-electron": "^0.34.4",
    "electron": "31.3.1",
    "nuxt": "^3.12.4"
  }
}
