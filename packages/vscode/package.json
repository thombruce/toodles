{
  "name": "toodles",
  "displayName": "Toodles",
  "description": "Adds Toodles language features to VS Code",
  "version": "0.8.1",
  "publisher": "thombruce",
  "repository": "https://github.com/thombruce/toodles",
  "private": true,
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "toodles",
        "aliases": [
          "Toodles"
        ],
        "extensions": [
          ".toodles",
          ".todo",
          ".list",
          ".shop",
          ".txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "toodles",
        "scopeName": "text.toodles",
        "path": "./syntaxes/toodles.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "markup.other.toodles.important",
            "settings": {
              "fontStyle": "bold"
            }
          },
          {
            "scope": "comment.line.toodles.done",
            "settings": {
              "fontStyle": "strikethrough"
            }
          },
          {
            "scope": "keyword.control.toodles.priority.high",
            "settings": {
              "foreground": "#ff5555"
            }
          },
          {
            "scope": "keyword.control.toodles.priority.med",
            "settings": {
              "foreground": "#feaa42"
            }
          },
          {
            "scope": "keyword.control.toodles.priority.low",
            "settings": {
              "foreground": "#ffca42"
            }
          },
          {
            "scope": "string.interpolated.toodles.date.completed",
            "settings": {
              "foreground": "#884444"
            }
          },
          {
            "scope": "string.interpolated.toodles.date.created",
            "settings": {
              "foreground": "#00cccc"
            }
          },
          {
            "scope": "string.interpolated.toodles.date.due",
            "settings": {
              "foreground": "#feaa42"
            }
          },
          {
            "scope": "markup.inserted.toodles.price",
            "settings": {
              "foreground": "#419e41"
            }
          },
          {
            "scope": "keyword.other.unit.toodles.multiplier",
            "settings": {
              "foreground": "#b468b4"
            }
          }
        ]
      }
    },
    "commands": []
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "path": "^0.12.7"
  }
}
